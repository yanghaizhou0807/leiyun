<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F4F3F8">

    <LinearLayout
        android:id="@+id/title_llyt"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:background="@color/white"
        android:orientation="vertical">
        <!-- -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:background="#4d000000"/>

        <RelativeLayout
            android:id="@+id/mail_list_rlyt"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/charge_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:text="消息中心"
                android:textColor="@color/wuse"
                android:textSize="16sp" />

            <Button
                android:id="@+id/back_btn"
                android:layout_width="9dp"
                android:layout_height="17dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:background="@mipmap/left" />

            <Button
                android:id="@+id/search_btn"
                android:layout_width="23dp"
                android:layout_height="21dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:background="@mipmap/message_button_bg"
                android:visibility="gone" />
        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginTop="9dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/kefu_iv"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:background="@mipmap/online_service_icon"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:id="@+id/kefu_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/wuse"
            android:layout_marginLeft="8dp"
            android:textSize="14sp"
            android:text="在线客服"
            android:layout_toRightOf="@id/kefu_iv"
            android:layout_alignTop="@+id/kefu_iv"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看与客服的沟通记录"
            android:layout_marginLeft="8dp"
            android:textColor="@color/ninenine"
            android:textSize="12sp"
            android:layout_toRightOf="@id/kefu_iv"
            android:layout_below="@+id/kefu_tv"
            android:layout_marginTop="5dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/jiantou_fx"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginTop="6dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/active_iv"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:background="@mipmap/active_page_icon"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:id="@+id/active_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/wuse"
            android:layout_marginLeft="8dp"
            android:textSize="14sp"
            android:text="活动"
            android:layout_toRightOf="@id/active_iv"
            android:layout_alignTop="@+id/active_iv"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="{第2件半价}春夏运动潮穿搭火热上线"
            android:layout_marginLeft="8dp"
            android:textColor="@color/ninenine"
            android:textSize="12sp"
            android:layout_toRightOf="@id/active_iv"
            android:layout_below="@+id/active_tv"
            android:layout_marginTop="5dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/jiantou_fx"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginTop="6dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/trans_iv"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:background="@mipmap/transaction_logistics_icon"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:id="@+id/trans_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/wuse"
            android:layout_marginLeft="8dp"
            android:textSize="14sp"
            android:text="交易物流"
            android:layout_toRightOf="@id/trans_iv"
            android:layout_alignTop="@+id/trans_iv"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击查看跟多物流信息"
            android:layout_marginLeft="8dp"
            android:textColor="@color/ninenine"
            android:textSize="12sp"
            android:layout_toRightOf="@id/trans_iv"
            android:layout_below="@+id/trans_tv"
            android:layout_marginTop="5dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/jiantou_fx"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginTop="6dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/message_iv"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:background="@mipmap/notification_message_icon"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:id="@+id/message_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/wuse"
            android:layout_marginLeft="8dp"
            android:textSize="14sp"
            android:text="通知消息"
            android:layout_toRightOf="@id/message_iv"
            android:layout_alignTop="@+id/message_iv"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="{有奖通知}阳光福利粉丝节,你参加了吗"
            android:layout_marginLeft="8dp"
            android:textColor="@color/ninenine"
            android:textSize="12sp"
            android:layout_toRightOf="@id/message_iv"
            android:layout_below="@+id/message_tv"
            android:layout_marginTop="5dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/jiantou_fx"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"/>

    </RelativeLayout>

</LinearLayout>