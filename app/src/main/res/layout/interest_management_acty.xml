<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F4F3F8">

    <LinearLayout
        android:id="@+id/title_llyt"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:background="@color/white"
        android:orientation="vertical">
        <!-- -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:background="#4d000000"/>

        <RelativeLayout
            android:id="@+id/mail_list_rlyt"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/charge_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:text="兴趣设置"
                android:textColor="@color/wuse"
                android:textSize="16sp" />

            <Button
                android:id="@+id/back_btn"
                android:layout_width="9dp"
                android:layout_height="17dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:background="@mipmap/left" />

            <Button
                android:id="@+id/search_btn"
                android:layout_width="23dp"
                android:layout_height="21dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:background="@mipmap/message_button_bg"
                android:visibility="gone" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/interest_btn_1"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="时尚辣妈"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:background="@drawable/textcolor_selector"/>
            <Button
                android:id="@+id/interest_btn_2"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:text="购物达人"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:background="@drawable/textcolor_selector"/>
            <Button
                android:id="@+id/interest_btn_3"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="数码爱好"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:background="@drawable/textcolor_selector"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="18dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/interest_btn_4"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="电子竞技"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:background="@drawable/textcolor_selector"/>
            <Button
                android:id="@+id/interest_btn_5"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:text="养生专家"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:background="@drawable/textcolor_selector"/>
            <Button
                android:id="@+id/interest_btn_6"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="护肤美容"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:background="@drawable/textcolor_selector"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="18dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/interest_btn_7"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="日韩料理"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:background="@drawable/textcolor_selector"/>
            <Button
                android:id="@+id/interest_btn_8"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:text="英语"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:background="@drawable/textcolor_selector"/>
            <Button
                android:id="@+id/interest_btn_9"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="时尚服饰"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:background="@drawable/textcolor_selector"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="18dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/interest_btn_10"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="风景摄影"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:background="@drawable/textcolor_selector"/>
            <Button
                android:id="@+id/interest_btn_11"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:text="运动健将"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:background="@drawable/textcolor_selector"/>
            <Button
                android:id="@+id/interest_btn_12"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="房产家装"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:background="@drawable/textcolor_selector"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="18dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/interest_btn_13"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="汽车美容"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:background="@drawable/textcolor_selector"/>
            <Button
                android:id="@+id/interest_btn_14"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:text="街拍潮流"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:background="@drawable/textcolor_selector"/>
            <Button
                android:id="@+id/interest_btn_15"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="奢侈名品"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:background="@drawable/textcolor_selector"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <Button
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginRight="51dp"
            android:layout_marginLeft="51dp"
            android:text="确认"
            android:textColor="@color/white"
            android:background="@drawable/exit_bg"/>

    </LinearLayout>


</LinearLayout>