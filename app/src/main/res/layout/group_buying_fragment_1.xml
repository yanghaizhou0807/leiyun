<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F3F8"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/welfare_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/top_background"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/llyt_first"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:background="@color/fafafa"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/first_binner"
                    android:layout_width="match_parent"
                    android:layout_height="142dp"
                    android:layout_below="@+id/first"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="6dp"
                    android:background="@mipmap/banner_bgt" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginRight="6dp"
                    android:layout_marginLeft="6dp"
                    android:layout_height="37dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/www"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="团购中"
                        android:textSize="14sp"
                        android:textColor="#ff4040"
                        android:layout_marginTop="9dp"
                        android:layout_gravity="center"/>
                    
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:background="@drawable/red_box"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="9dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:textSize="11sp"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:text="14点场"
                            android:background="#f20b0b"/>
                        <TextView
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="14：12：12"
                            android:textSize="11sp"
                            android:textColor="#f20b0b"
                            />

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>









        </LinearLayout>

    </ScrollView>


</RelativeLayout>