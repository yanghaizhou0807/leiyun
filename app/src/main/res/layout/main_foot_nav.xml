<?xml version="1.0" encoding="utf-8"?>
<RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_rg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:paddingBottom="4dp"
    android:paddingTop="4dp"
     >

    <RadioButton
        android:id="@+id/rb_communication"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@null"
        android:button="@null"
        android:checked="true"
        android:drawableTop="@drawable/bg_communication_button"
        android:drawablePadding="2dp"
        android:gravity="center_horizontal"
        android:text="首页"
        android:textColor="@drawable/main_bottom_text_color"
        android:textSize="12dp" />

    <RadioButton
        android:id="@+id/rb_groupchat"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@null"
        android:button="@null"
        android:drawablePadding="2dp"
        android:gravity="center_horizontal"
        android:drawableTop="@drawable/bg_groupchat_button"
        android:textColor="@drawable/main_bottom_text_color"
        android:text="分类"
        android:textSize="12dp" />

    <RadioButton
        android:visibility="gone"
        android:id="@+id/rb_appcenter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@null"
        android:button="@null"
        android:drawablePadding="2dp"
        android:gravity="center_horizontal"
        android:drawableTop="@drawable/bg_appcenter_button"
        android:textColor="@drawable/main_bottom_text_color"
        android:text="搜索"
        android:textSize="12dp"

     />

    <RadioButton
        android:id="@+id/rb_maillist"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@null"
        android:button="@null"
        android:drawableTop="@drawable/bg_maillist_button"
        android:drawablePadding="2dp"
        android:gravity="center_horizontal"
        android:textColor="@drawable/main_bottom_text_color"
        android:text="购物车"
        android:textSize="12dp" />
    <RadioButton
        android:id="@+id/rb_more"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@null"
        android:button="@null"
        android:drawableTop="@drawable/bg_more_info"
        android:drawablePadding="2dp"
        android:gravity="center_horizontal"
        android:textColor="@drawable/main_bottom_text_color"
        android:text="我的"
        android:textSize="12dp" />
</RadioGroup>