<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/title_llyt"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@drawable/gary_box_bg"
        android:orientation="vertical">
        <!-- -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:background="#4d000000"/>

        <RelativeLayout
            android:id="@+id/mail_list_rlyt"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp">

            <TextView
                android:visibility="gone"
                android:id="@+id/charge_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:text="可用积分"
                android:textColor="@color/wuse"
                android:textSize="16sp" />

            <Button
                android:id="@+id/back_btn"
                android:layout_width="9dp"
                android:layout_height="17dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:background="@mipmap/left" />

            <Button
                android:id="@+id/search_btn"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:background="@mipmap/diandiandian"
                 />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llyt_num"
        android:layout_below="@+id/title_llyt"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/all_evaluations_tv"
                android:layout_width="wrap_content"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_height="27dp"
                android:textColor="@color/wuse"

                android:textSize="11sp"
                android:gravity="center"
                android:background="@drawable/pingjiaall_fill"/>
            <TextView
                android:id="@+id/new_evaluations_tv"
                android:layout_width="wrap_content"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_height="27dp"
                android:textColor="@color/wuse"

                android:layout_marginRight="12dp"
                android:layout_marginLeft="12dp"
                android:textSize="11sp"
                android:gravity="center"
                android:background="@drawable/pingjiaall_fill"/>
            <TextView
                android:id="@+id/good_evaluations_tv"
                android:layout_width="wrap_content"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_height="27dp"
                android:textColor="@color/wuse"

                android:textSize="11sp"
                android:gravity="center"
                android:background="@drawable/pingjiaall_fill"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/middle_evaluations_tv"
                android:layout_width="wrap_content"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_height="27dp"
                android:textColor="@color/wuse"

                android:textSize="11sp"
                android:gravity="center"
                android:background="@drawable/pingjiaall_fill"/>
            <TextView
                android:id="@+id/pic_evaluations_tv"
                android:layout_width="wrap_content"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_height="27dp"
                android:textColor="@color/wuse"

                android:layout_marginRight="12dp"
                android:layout_marginLeft="12dp"
                android:textSize="11sp"
                android:gravity="center"
                android:background="@drawable/pingjiaall_fill"/>
            <TextView
                android:id="@+id/add_evaluations_tv"
                android:layout_width="wrap_content"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_height="27dp"
                android:textColor="@color/wuse"

                android:textSize="11sp"
                android:gravity="center"
                android:background="@drawable/pingjiaall_fill"/>

        </LinearLayout>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_detail"
        android:layout_below="@+id/llyt_num"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>

</RelativeLayout>