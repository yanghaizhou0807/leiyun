                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingTop="10dp"
                android:textSize="12sp"
                android:textColor="@color/wuse"
                android:text=""
                />
            <GridView
                android:id="@+id/attribute_gv_2"
                android:layout_width="match_parent"
                android:verticalSpacing="8dp"
                android:numColumns="3"
                android:paddingTop="10dp"
                android:layout_height="match_parent"/>

        </LinearLayout>
        <!--three-->
        <LinearLayout
            android:id="@+id/gv_llyt_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/attribute_tv_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingTop="10dp"
                android:textSize="12sp"
                android:textColor="@color/wuse"
                android:text=""
                />
            <GridView
                android:id="@+id/attribute_gv_3"
                android:layout_width="match_parent"
                android:verticalSpacing="8dp"
                android:numColumns="3"
                android:paddingTop="10dp"
                android:layout_height="match_parent"/>

        </LinearLayout>
        <!--four-->
        <LinearLayout
            android:id="@+id/gv_llyt_4"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/attribute_tv_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingTop="10dp"
                android:textSize="12sp"
                android:textColor="@color/wuse"
                android:text=""
                />
            <GridView
                android:id="@+id/attribute_gv_4"
                android:layout_width="match_parent"
                android:verticalSpacing="8dp"
                android:numColumns="3"
                android:paddingTop="10dp"
                android:layout_height="match_parent"/>

        </LinearLayout>
        <!--five-->
        <LinearLayout
            android:id="@+id/gv_llyt_5"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/attribute_tv_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingTop="10dp"
                android:textSize="12sp"
                android:textColor="@color/wuse"
                android:text=""
                />
            <GridView
                android:id="@+id/attribute_gv_5"
                android:layout_width="match_parent"
                android:verticalSpacing="8dp"
                android:numColumns="3"
                android:paddingTop="10dp"
                android:layout_height="match_parent"/>

        </LinearLayout>

    </LinearLayout>
</ScrollView>



